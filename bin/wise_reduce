#!/usr/bin/env python

from pywise.wise import reduce_night
import numpy as np
import sys
import getopt
import datetime

def usage():
    import argparse

    parser = argparse.ArgumentParser(
        description='''Reduce Wise Observatory images.'''
    )
    parser.add_argument("-f", "--from", metavar="YYYYMMDD", help="date to reduce", required=True)
    parser.add_argument("-t", "--to", metavar="YYYYMMDD", help="optional second date to define a date range to reduce")
    parser.add_argument("telescope", help="telescope", choices=["1m", "C28", "C18"])
    args = parser.parse_args()


def daterange(start_date, end_date):
    for n in range(int((end_date - start_date).days) + 1):
        yield start_date + datetime.timedelta(n)


def main(argv):
    try:
        opts, args = getopt.getopt(argv, "f:t:h", ["from=", "to=", "help"])
    except getopt.GetoptError as err:
        print(err)
        usage()
        sys.exit(2)

    d2 = None
    for opt, arg in opts:
        if opt in ("-h", "--help"):
            usage()
            sys.exit(2)
        elif opt in ("-f", "--from"):
            d1 = datetime.datetime.strptime(arg, "%Y%m%d")
        elif opt in ("-t", "--to"):
            d2 = datetime.datetime.strptime(arg, "%Y%m%d")

    telescope = args[-1]

    if d2:
        for day in daterange(d1, d2):
            print(day)
            reduce_night(day.year, day.month, day.day, telescope)
    else:
        print(d1)
        reduce_night(d1.year, d1.month, d1.day, telescope)


if __name__ == '__main__':
    if len(sys.argv) == 1:
        usage()
        sys.exit(2)
    main(sys.argv[1:])
